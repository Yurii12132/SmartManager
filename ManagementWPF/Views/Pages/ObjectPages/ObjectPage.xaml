            <Label Content="{Binding CurrentObject.Name, FallbackValue='Імя обєкта'}"
                   Grid.Row="0"
                   Foreground="White"
                   FontSize="16"
                   FontWeight="Bold"/>

            <Button Style="{StaticResource ButtonPageObject}" 
                    Command="{Binding ButtonClick_ReportPage}"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Звіт"
                    HorizontalAlignment="Left"/>

            <Button Style="{StaticResource ButtonPageObject}"
                    Command="{Binding ButtonClick_PayoutPage}"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Виплати"
                    HorizontalAlignment="Right"/>

            <Button Style="{StaticResource ButtonPageObject}"
                    Command="{Binding ButtonClick_OutlayPage}"
                    Grid.Row="1"
                    Grid.Column="2"
                    Content="Витрати"
                    HorizontalAlignment="Left"/>

            <Button Style="{StaticResource ButtonPageObject}" 
                    Command="{Binding Button_ClosedObject}"
                    Grid.Row="1"
                    Grid.Column="2"
                    Content="Закрити об'єкт"
                    Width="130"
                    HorizontalAlignment="Right"
                    Background="#B14545"
                    Foreground="White"/>


            <Border Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                           Text="Працівники"
                           VerticalAlignment="Center"
                           Margin="10,10,0,0"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="White"/>
                    <Border Grid.Row="1"
                        Margin="0,10,0,10"
                        Background="White"
                        CornerRadius="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--Header table-->
                            <Border Background="#B2B2B2"
                                CornerRadius="10,10,0,0"
                                Grid.Row="0"
                                Padding="10,0,10,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="130"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                           Text="Працівник"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" 
                                           Text="Кіл. годин"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                           Text="Дата прийому"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" 
                                           Text="Ноиер телефону"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <ListView Grid.Row="1"
                                  HorizontalAlignment="Stretch"
                                  ItemsSource="{Binding Employees}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="250"/>
                                                <ColumnDefinition Width="70"/>
                                                <ColumnDefinition Width="130"/>
                                                <ColumnDefinition Width="130"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Name}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Hours}" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding CreateDate, StringFormat=dd-MM-yyyy}" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="{Binding Phone}" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

